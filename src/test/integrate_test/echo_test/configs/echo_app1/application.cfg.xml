<?xml version="1.0" encoding="utf-8"?>

<APP>
	<AppName>echo_app1</AppName>
	<Description>echo test</Description>

	<Topology>
		<ProcessorNum>3</ProcessorNum>
		<UpStreamBigpipeNum>1</UpStreamBigpipeNum>
		<Importer>
			<Importer1>
				<ProcessorName>echo_importer</ProcessorName>
				<Description></Description>
				<RunCmd>./echo_importer</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>1</Parallelism>	
				<BackupPENum>1</BackupPENum>
                                <StatusMark>0</StatusMark>	
                                <TuplesBatchCount>500</TuplesBatchCount>
				 <ForceForwardTuplesPeriodMillSeconds>100</ForceForwardTuplesPeriodMillSeconds>			
			</Importer1>
		</Importer>
		<Exporter>
			<Exporter1>
				<ProcessorName>echo_exporter</ProcessorName>
				<Description></Description>
				<RunCmd>./echo_exporter</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>1</Parallelism>
				<BackupPENum>1</BackupPENum>
				<StatusMark>0</StatusMark>
				<TuplesBatchCount>500</TuplesBatchCount>
				<ForceForwardTuplesPeriodMillSeconds>100</ForceForwardTuplesPeriodMillSeconds>				
				<Subscribe>
					<source>
						<processor>echo_pe_task</processor>
						<tag>in</tag>
					</source>
				</Subscribe>
			</Exporter1>
		</Exporter>
		<Processor>
			<Processor1>
				<ProcessorName>echo_pe_task</ProcessorName>
				<Description></Description>
				<RunCmd>./echo_pe_task</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>1</Parallelism>
				<BackupPENum>1</BackupPENum>
				<StatusMark>0</StatusMark>
				<TuplesBatchCount>500</TuplesBatchCount>
				<ForceForwardTuplesPeriodMillSeconds>100</ForceForwardTuplesPeriodMillSeconds>
				<Subscribe>
					<source>
						<processor>echo_importer</processor>
						<tag>in</tag>
					</source>
				</Subscribe>
			</Processor1>
		</Processor>
	</Topology>
</APP>
