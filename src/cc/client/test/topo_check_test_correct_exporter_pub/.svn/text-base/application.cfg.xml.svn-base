<?xml version="1.0" encoding="utf-8"?>

<APP>
	<AppName>word_count_test</AppName>
	<Description>echo</Description>

	<Topology>
		<ProcessorNum>3</ProcessorNum>
		<Importer>
			<Importer1>
				<ProcessorName>echo_importer</ProcessorName>
				<Description></Description>
        <RunCmd>./echo_importer</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>1</Parallelism>	
				<BackupPENum>1</BackupPENum>
        <StatusMark>0</StatusMark>	
        <TuplesBatchCount>10</TuplesBatchCount>			
				<Subscribe>./echo_importer1.conf.xml</Subscribe>
			</Importer1>
		</Importer>
		<Exporter>
			<Exporter1>
				<ProcessorName>echo_exporter</ProcessorName>
				<RunCmd>./bin/export</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>1</Parallelism>
				<BackupPENum>1</BackupPENum>
        <StatusMark>0</StatusMark>
				<TuplesBatchCount>10</TuplesBatchCount>				
        <ExporterType>bigpipe</ExporterType>
				<Subscribe>
					<source>
						<processor>echo_pe_task</processor>
						<tag>in</tag>
					</source>
				</Subscribe>
			</Exporter1>
		</Exporter>
		<Processor>
			<Processor1>
				<ProcessorName>echo_pe_task</ProcessorName>
				<Description></Description>
       	<RunCmd>./echo_pe_task</RunCmd>
				<Resource>
					<CPU>0.5</CPU>
					<Memory>16000</Memory>
				</Resource>
				<Parallelism>3</Parallelism>
				<BackupPENum>1</BackupPENum>
        <StatusMark>0</StatusMark>
				<TuplesBatchCount>10</TuplesBatchCount>				
				<Subscribe>
					<source>
						<processor>echo_importer</processor>
						<tag>in</tag>
					</source>
				</Subscribe>
			</Processor1>
		</Processor>
	</Topology>
</APP>
